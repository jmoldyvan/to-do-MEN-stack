<!DOCTYPE html>
<html lang="en">
	<head>
    	<meta charset="utf-8">
    	<meta name="description" content="Your description goes here">
    	<meta name="keywords" content="one, two, three">

		<title>To-Do</title>
        <!-- GOOG FONT -->

        <!-- ICON -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
        integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
        <!-- external CSS link -->
		<link rel="stylesheet" href="/style.css">
	</head>

	<body>
        <section class="todo-container">
            <h2>To Do List</h2>
            <section class="todo">
                <form action="/" method="POST" class="todo-header">
                    <input type="text" name="title" value="title">
                    <textarea rows="6" cols="45" name="content">content</textarea>
                    <button type="submit"><span class="fas fa-plus">Add Task</span></button>
                </form>
                <ul class="todo-list">
                    <% todoTasks .forEach(task => {%>
                        <li class="todo-list-item">
                            <div class="todo-list-item-title"><%= task.title %></div>
                            <div class="todo-list-item-content"><%= task.content %></div>
                            <a href="/edit/<%= task._id %>" class="edit">
                            <span class="fas fa-edit"></span>
                            </a>
                            <a href="/edit/remove/<%= task._id %>" class="remove">
                            <span class="fas fa-times"></span>
                            </a>
                        </li>
                    <% }) %>
                </ul>
            </section>
        </section>
		<script type="text/javascript" src="js/main.js"></script>
	</body>
</html>
